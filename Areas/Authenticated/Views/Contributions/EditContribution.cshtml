@model WebEnterprise.Models.Contribution

@{
    ViewBag.Title = "Edit Contribution";
    Layout = "_Layout";
}

<h2>Edit Contribution</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Content">Content:</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="FacultyId">Faculty:</label>
        <select asp-for="FacultyId" class="form-control" asp-items="ViewBag.Faculties"></select>
    </div>

    <!-- Display current image if available -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="form-group">
            <label>Current Image:</label>
            <img src="@Url.Content(Model.ImageUrl)" alt="Current Image" style="max-width: 200px; max-height: 200px;" />
        </div>
    }

    <div class="form-group">
        <label for="ImageFile">Image File:</label>
        <input type="file" id="ImageFile" name="imageFile" class="form-control-file" />
    </div>

    <!-- Display current document file if available -->
    @if (!string.IsNullOrEmpty(Model.FilePath))
    {
        <div class="form-group">
            <label>Current Document File:</label>
            <a href="@Url.Content(Model.FilePath)" target="_blank">Download</a>
        </div>
    }

    <div class="form-group">
        <label for="DocumentFile">New Document File (.doc or .pdf):</label>
        <input type="file" id="DocumentFile" name="documentFile" class="form-control-file" />
    </div>

    <!-- Add other form fields as needed -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    // Add scripts as needed
}