@model WebEnterprise.Models.Contribution

@{
    ViewBag.Title = "Add Comment";
    Layout = "_Layout";
}

<h2>Add Comment</h2>

<form id="addCommentForm" method="post" action="@Url.Action("AddComment", "Contributions")">
    <div class="form-group">
        <input type="hidden" id="contributionId" name="contributionId" value="@Model.Id" />
        <!-- Display the contribution ID for reference -->
        <label>Contribution ID:</label>
        <span>@Model.Id</span>
    </div>
    <div class="form-group">
        <label for="commentText">Comment:</label>
        <textarea class="form-control" id="commentText" name="commentText" rows="3"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
