@model IEnumerable<WebEnterprise.Models.User>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Users Management";
}

<h1 class="mt-5 mb-4">User Management</h1>

<div class="btn-group mb-3" role="group">
    <a class="btn btn-secondary @((ViewBag.SelectedRole == null) ? "active" : "")" href="@Url.Action("Index", "Users")">All Users</a>
    <a class="btn btn-secondary @((ViewBag.SelectedRole == "coordinator") ? "active" : "")" href="@Url.Action("Index", "Users", new { roleFilter = "coordinator" })">Coordinators</a>
    <a class="btn btn-secondary @((ViewBag.SelectedRole == "student") ? "active" : "")" href="@Url.Action("Index", "Users", new { roleFilter = "student" })">Students</a>
    <a class="btn btn-secondary @((ViewBag.SelectedRole == "UniversityMarketingManager") ? "active" : "")" href="@Url.Action("Index", "Users", new { roleFilter = "UniversityMarketingManager" })">University Marketing Managers</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>@user.Gender</td>
                    <td>@user.DoB</td>
                    <td>@user.Role</td> <!-- Display the user's role -->
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary btn-sm" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">
                                <ion-icon name="create-outline" id="table-button" style="--color: #0400d3;"></ion-icon>
                            </a>
                            <a class="btn btn-info btn-sm" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">
                                <ion-icon name="information-circle-outline" id="table-button"
                                          style="--color: #00792e;"></ion-icon>
                            </a>
                            <a asp-area="Authenticated" asp-controller="Users" asp-action="ConfirmEmail" asp-route-id="@user.Id" class="btn btn-success">
                                <ion-icon name="refresh-circle-outline" id="table-button"
                                          style="--color: #cbce00;"></ion-icon>
                            </a>
                            <a class="btn btn-danger btn-sm" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id">
                                <ion-icon name="trash-outline" id="table-button" style="--color: #d41c00;"></ion-icon>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
