@model WebEnterprise.Models.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "User Detail";
}

<div class="page-container">
    <div class="card" style="margin: 10px">
        <div class="card-body">
            <h1>User Details</h1>
            <table class="detail-table">
                <tr>
                    <th>Full Name</th>
                    <td>@Html.DisplayFor(model => model.FullName)</td>
                </tr>
                <tr>
                    <th>Date of Birth</th>
                    <td>@Html.DisplayFor(model => model.DoB)</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>@Html.DisplayFor(model => model.Role)</td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td>@Html.DisplayFor(model => model.Gender)</td>
                </tr>
                <tr>
                    <th>Created At</th>
                    <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                </tr>
                <tr>
                    <th>Updated At</th>
                    <td>@Html.DisplayFor(model => model.UpdatedAt)</td>
                </tr>
            </table>
            <div class="submit-form">
                <a asp-action="Index" style="--color: #ff2400;" id="form-Btn">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" style="--color: #28b3fe;" id="form-Btn">Save</a>
            </div>
        </div>
    </div>
</div>