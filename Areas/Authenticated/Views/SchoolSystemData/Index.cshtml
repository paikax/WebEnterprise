@model IEnumerable<WebEnterprise.Models.SchoolSystemData>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="page-container">
    <h2>System Data Index</h2>

    <p><a asp-action="Create">Create New</a></p>

    <table class="Date-table">
        <thead>
            <tr>
                <th>
                    Open Date
                </th>
                <th>
                    Closure Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpenDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClosureDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <ion-icon name="create-outline" id="edit"></ion-icon>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <ion-icon name="trash-outline" id="delete"></ion-icon>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>