@model SchoolSystemData

@{
    ViewBag.Title = "Edit semester";
    Layout = "_Layout";
}

<h2>Edit</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="OpenDate" class="control-label"></label>
        <div class='input-group date' id='openDatepicker'>
            <input asp-for="OpenDate" class="form-control" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
        <span asp-validation-for="ClosureDate" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="ClosureDate" class="control-label"></label>
            <div class='input-group date' id='closureDatepicker'>
                <input asp-for="ClosureDate" class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            <span asp-validation-for="ClosureDate" class="text-danger"></span>
        </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#openDatepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });
        });
        
        $(document).ready(function () {
                $('#closureDatepicker').datepicker({
                    format: 'yyyy-mm-dd',
                    autoclose: true
                });
            });
    </script>
}
