@model SchoolSystemData

@{
    ViewBag.Title = "Create semester";
    Layout = "_Layout";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ClosureDate" class="control-label"></label>
        <div class='input-group date' id='closureDatepicker'>
            <input asp-for="ClosureDate" class="form-control" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
        <span asp-validation-for="ClosureDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AcademicYear" class="control-label"></label>
        <input asp-for="AcademicYear" class="form-control" />
        <span asp-validation-for="AcademicYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#closureDatepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });
        });
    </script>
}
