@model WebEnterprise.Models.ContributionClosureDate

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="page-container">
    <div class="form-container">
        <form asp-action="EditClosure" class="input-form">
            <h1>Edit Submission Closure</h1>
            <input type="hidden" asp-for="Id" />
            <div class="input-field">
            <ion-icon name="calendar"></ion-icon>
                <input asp-for="StartDate" />
                <label asp-for="StartDate">Start Date</label>
            </div>
            <div class="input-field">
            <ion-icon name="calendar"></ion-icon>
                <input asp-for="EndDate" />
                <label asp-for="EndDate">End Date</label>
            </div>
            <div class="input-field">
                <ion-icon name="bookmark"></ion-icon>
                <select asp-for="FacultyId" asp-items="ViewBag.Faculties"></select>
                <label asp-for="FacultyId">Faculty</label>
            </div>
            <a asp-action="Index" class="back-icon"><ion-icon name="arrow-back-circle"></ion-icon></a>
            <button type="submit" class="submit-Btn">Save Changes</button>
        </form>
    </div>
</div>