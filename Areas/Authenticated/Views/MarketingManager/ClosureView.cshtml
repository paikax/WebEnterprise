<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/mmdashboard.css" rel="stylesheet" />
    <!-- Font Awesome CDN link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-fVFYrEXjQ5Srqv5bTuChKX5/KVaz2Sb7pFPIL9VtZ17DRjD7sjRM3Rv4+X4c7FjP" crossorigin="anonymous">
</head>
<body>
    <div class="sidenav">
        <!-- Use Font Awesome icon -->
        <a href="@Url.Action("CreateFaculty", "Faculty", new { area = "Authenticated" })" class="create-faculty-btn">Create Faculty </a>
        <a href="#">Dashboard</a>
        <a href="@Url.Action("CreateClosure", "Closure", new {area = "Authenticated"})" class="create-faculty-btn">Set closure date  </a>
        <a href="#">Logout</a>
    </div>

    <div class="main">
        <h1>Welcome to Your Dashboard</h1>
        <div>
            <h2>Closure Dates</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Faculty</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th> <!-- Add this column for edit and delete buttons -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var closure in Model)
                    {
                        <tr>
                            <td>@closure.FacultyId</td>
                            <td>@closure.Faculty.RoleName</td>
                            <td>@closure.StartDate</td>
                            <td>@closure.EndDate</td>
                            <td>
                                <a href="@Url.Action("EditClosure", "Closure", new { id = closure.Id, area = "Authenticated" })" class="btn btn-primary">Edit</a>
                                <form asp-action="DeleteClosure" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@closure.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
