<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/mmdashboard.css" rel="stylesheet" />
    <!-- Font Awesome CDN link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-fVFYrEXjQ5Srqv5bTuChKX5/KVaz2Sb7pFPIL9VtZ17DRjD7sjRM3Rv4+X4c7FjP" crossorigin="anonymous">
</head>
<body>
    <div class="sidenav">
        <!-- Use Font Awesome icon -->
        <a href="@Url.Action("CreateFaculty", "Faculty", new { area = "Authenticated" })" class="create-faculty-btn">Create Faculty </a>
        <a href="#">Dashboard</a>
        <a href="@Url.Action("CreateClosure", "Closure", new {area = "Authenticated"})" class="create-faculty-btn">Set closure date  </a>
        <a href="#">Logout</a>
    </div>

    <div class="main">
        <h1>Welcome to Your Dashboard</h1>
        <div>
            <h2>List of Faculties</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Faculty Name</th>
                        <th>Actions</th>
                        <!-- Add other columns as needed -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var faculty in Model)
                    {
                        <tr>
                            <td>@faculty.Id</td>
                            <td>@faculty.RoleName</td>
                            <td>
                                <a href="@Url.Action("EditFaculty", "Faculty", new { id = faculty.Id, area = "Authenticated" })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("DeleteFaculty", "Faculty", new { id = faculty.Id, area = "Authenticated" })" class="btn btn-danger">Delete</a>
                            </td>
                            <!-- Add other columns as needed -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
